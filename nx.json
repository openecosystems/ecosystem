{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "affected": {
    "defaultBase": "main"
  },
  "cli": {
    "packageManager": "yarn"
  },
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "production",
        "^production"
      ],
      "cache": true
    },
    "generate": {
      "cache": true
    },
    "pack": {
      "dependsOn": [
        "build",
        "^pack"
      ]
    },
    "container": {
      "dependsOn": [
        "build"
      ]
    },
    "test": {
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/jest.preset.js"
      ],
      "cache": true
    },
    "lint": {
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json"
      ],
      "cache": true
    },
    "eslint": {
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json"
      ],
      "cache": true
    },
    "e2e": {
      "inputs": [
        "default",
        "^production"
      ],
      "cache": true
    },
    "build-storybook": {
      "inputs": [
        "default",
        "^production",
        "{projectRoot}/.storybook/**/*",
        "{projectRoot}/tsconfig.storybook.json"
      ],
      "cache": true
    },
    "pre-build": {
      "cache": true
    },
    "chromatic": {
      "cache": true
    },
    "@nx/jest:jest": {
      "cache": true,
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/jest.preset.js"
      ],
      "options": {
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "generators": {
    "@oeco/nx-react": {
      "component": {
        "style": "scss"
      }
    },
    "@nx/angular:application": {
      "style": "scss",
      "linter": "eslint",
      "unitTestRunner": "jest",
      "e2eTestRunner": "cypress"
    },
    "@nx/angular:library": {
      "linter": "eslint",
      "unitTestRunner": "jest"
    },
    "@nx/angular:component": {
      "style": "scss"
    },
    "@nx/react": {
      "application": {
        "style": "scss",
        "linter": "eslint",
        "bundler": "webpack",
        "babel": true
      },
      "component": {
        "style": "scss"
      },
      "library": {
        "style": "scss",
        "linter": "eslint",
        "unitTestRunner": "jest"
      }
    },
    "@nx/node": {
      "application": {
        "standaloneConfig": true
      },
      "library": {
        "standaloneConfig": true
      }
    }
  },
  "defaultProject": "proto",
  "plugins": [
    "@platform/nx-go",
    "@nx-go/nx-go"
  ],
  "pluginsConfig": {
    "@platform/nx-go": {
      "analyzeSourceFiles": false
    }
  },
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/babel.config.json",
      "{workspaceRoot}/go.work"
    ],
    "production": [
      "default",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/.storybook/**/*",
      "!{projectRoot}/**/*.stories.@(js|jsx|ts|tsx|mdx)",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/tsconfig.storybook.json"
    ]
  },
  "release": {
    "groups": {
      "sdks": {
        "projectsRelationship": "fixed",
        "projects": ["tag:type:sdk"],
        "version": {
          "conventionalCommits": true
        },
        "changelog": true,
        "releaseTagPattern": "sdk@{version}"
      },
      "clis": {
        "projectsRelationship": "independent",
        "projects": ["tag:type:cli"],
        "version": {
          "conventionalCommits": true
        },
        "changelog": true,
        "releaseTagPattern": "cli-{projectName}@{version}"
      }
    },
    "changelog": {
      "workspaceChangelog": false,
      "projectChangelogs": true,
      "automaticFromRef": true
    }
  },
  "nxCloudAccessToken": "ODZhYjY0ZjgtM2M1Yi00NTU2LTgyZjEtYzg1M2M2MTUxNzg0fHJlYWQtd3JpdGU="
}
